{
	"info": {
		"_postman_id": "product-api-collection",
		"name": "Product API Collection",
		"description": "Complete Postman collection for testing the JSON-based Product API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Public Endpoints",
			"item": [
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"products"
							]
						},
						"description": "Returns a list of all products with pagination support"
					},
					"response": []
				},
