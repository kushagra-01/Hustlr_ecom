		{
			"name": "Admin Endpoints",
			"item": [
				{
					"name": "Get All Products (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"description": "JWT token for admin user"
							}
						],
						"url": {
							"raw": "{{base_url}}/admin/products",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"admin",
								"products"
							]
						},
						"description": "Get all products (admin view)"
					},
					"response": []
				},
				{
					"name": "Create Product (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"description": "JWT token for admin user"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Admin Created Product\",\n  \"price\": 199.99,\n  \"description\": \"Product created by admin user\",\n  \"category\": \"Electronics\",\n  \"imageUrl\": \"https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=500&h=500&fit=crop\"\n}"
						},
